# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Login.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import CRUD routes
*     /admin                                    module:crud

# Import Secure routes
*      /                                        module:secure

# Import unfollow routes
*      /unfollow                				Users.listFollows

# Import requestToPost routes
*      /topicpostrequest                		Topics.requestToPost

# Import AdvancedSearch routes
*      /AdvancedSearch                          Search.advancedSearch
  
# Import ViewSearchResults routes
*      /searchResult                    		Search.searchResult

# Import InviteMember routes
*	   /InviteMember							Organizations.InviteMember

# Import InviteMember routes
*	   /ViewOrgInv  							Users.ViewOrgInv
